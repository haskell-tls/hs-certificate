# compiler supported and their equivalent LTS
compiler: ghc-7.8 lts-2.22
compiler: ghc-7.10 lts-6.35
compiler: ghc-8.0 lts-9.21
compiler: ghc-8.2 lts-10.7
compiler: ghc-8.4 lts-12.7

# gitdep: name location commit

# options
# option: alias x=y z=v
#
option: cryptonitedeps extradep=cryptonite-0.25 extradep=basement-0.0.7 extradep=memory-0.14.16 extradep=foundation-0.0.20

# builds
# recognized simple options: nohaddock allow-newer allowed-failure
# kvs options: flag=pkg:flagname extradep=package-version gitdep=name
build: ghc-7.8 nohaddock extradep=asn1-parse-0.9.4 extradep=asn1-types-0.3.2 cryptonitedeps
build: ghc-8.2
build: ghc-7.10 cryptonitedeps
build: ghc-8.0 cryptonitedeps
build: ghc-8.0 os=osx cryptonitedeps
build: ghc-8.4

# packages
package: x509/
package: x509-store/
package: x509-system/
package: x509-validation/
package: x509-util/

# extra builds
hlint: allowed-failure
weeder: allowed-failure
coverall: false

# travis extra
# travis-apt-addon: packagename
# travis-tests: post-script
